[default]
DEBUG=${DJANGO_DEBUG}
POST_DATE_DAYS_AGO_THRESHOLD=90
BUILD_ID=${BUILD_ID}

[database]
DB_NAME=${DB_NAME}
DB_USER=${DB_USER}
DB_HOST=${DB_HOST}
