DB_PASSWORD=${DB_PASSWORD}

[captcha]
RECAPTCHA_PUBLIC_KEY=
RECAPTCHA_PRIVATE_KEY=
HCAPTCHA_SITEKEY=${HCAPTCHA_SITEKEY}
